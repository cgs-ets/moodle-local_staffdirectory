{{!
    @template local_staffdirectory/staffmember
}}
<li>
    <span class="attr_photo"><a href="{{photo}}" title="{{displayname}} profile"><img src="{{photo}}" alt="{{displayname}}" title="{{displayname}}" /></a></span>
    {{#isstaff}}<span class="attr_staffcode">{{schoolstaffcode}}</span>{{/isstaff}}
    <span class="attr_displayname">{{displayname}}</span>
    <span class="attr_campus">{{staffcampus}}</span>
    <span class="attr_department">{{staffdepartmentdescription}}</span>
    <span class="attr_jobposition">{{jobpositiondescription}}</span>
    {{#isstaff}}<span class="attr_extension">{{staffextension}}</span>{{/isstaff}}
    <span class="attr_email"><a href="mailto:{{occupemail}}">Email</a></span>
</li>